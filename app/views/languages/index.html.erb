<p id="notice"><%= notice %></p>

<h1>Languages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Local name</th>
      <th>Slug</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr class="language">
      <tr>
        <td><%= language.name %></td>
        <td><%= language.local_name %></td>
        <td><%= language.slug %></td>
        <td><%= link_to 'Show', language %></td>
        <td><%= link_to 'Edit', edit_language_path(language) %></td>
        <td><%= link_to 'Delete', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Language', new_language_path %>
